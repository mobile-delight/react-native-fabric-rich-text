{
  "name": "react-native-fabric-rich-text",
  "version": "1.0.0",
  "description": "Fabric-first rich text renderer for React Native with NativeWind/Tailwind CSS support",
  "main": "./lib/module/index.js",
  "types": "./lib/typescript/src/index.d.ts",
  "typesVersions": {
    "*": {
      "nativewind": [
        "./lib/typescript/src/nativewind.d.ts"
      ]
    }
  },
  "exports": {
    ".": {
      "source": "./src/index.tsx",
      "types": "./lib/typescript/src/index.d.ts",
      "default": "./lib/module/index.js"
    },
    "./nativewind": {
      "source": "./src/nativewind.ts",
      "types": "./lib/typescript/src/nativewind.d.ts",
      "default": "./lib/module/nativewind.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "react-native.config.js",
    "ATTRIBUTIONS.md",
    "!ios/build",
    "!ios/ci.sh",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!android/settings.gradle",
    "!android/ci.sh",
    "!android/src/test",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "example": "yarn workspace react-native-fabric-rich-text-example",
    "clean": "del-cli android/build lib node_modules",
    "clean:all": "yarn workspaces foreach -Rpt run clean && rm -rf android/build android/.gradle lib node_modules example/node_modules e2e/node_modules example-web/node_modules && echo 'All workspaces cleaned'",
    "prepare": "bob build",
    "typecheck": "tsc",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "test": "jest --coverage",
    "test:android": "./android/ci.sh",
    "test:ios": "./ios/ci.sh",
    "test:native": "yarn test:android && yarn test:ios"
  },
  "keywords": [
    "react-native",
    "ios",
    "android",
    "html",
    "text",
    "fabric",
    "new-architecture",
    "nativewind",
    "tailwind",
    "tailwindcss",
    "className",
    "styled",
    "html-renderer",
    "rich-text"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mobile-delight/react-native-fabric-rich-text.git"
  },
  "author": "Michael Fay <michael@example.com> (https://github.com/michael-fay)",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "bugs": {
    "url": "https://github.com/mobile-delight/react-native-fabric-rich-text/issues"
  },
  "homepage": "https://github.com/mobile-delight/react-native-fabric-rich-text#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.2",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.35.0",
    "@google-cloud/translate": "^9.3.0",
    "@react-native/babel-preset": "0.81.0",
    "@react-native/eslint-config": "0.83.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react": "^16.3.1",
    "@testing-library/react-native": "^13.3.3",
    "@types/dompurify": "^3.0.5",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19",
    "@types/sanitize-html": "^2.16.0",
    "del-cli": "^6.0.0",
    "dompurify": "^3.3.1",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "nativewind": "^4.2.0",
    "prettier": "^2.8.8",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.0",
    "react-native-builder-bob": "^0.40.17",
    "react-test-renderer": "19.1.0",
    "sanitize-html": "^2.17.0",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2"
  },
  "peerDependencies": {
    "dompurify": "^3.2.0",
    "nativewind": "^4.2.0",
    "react": ">=18.0.0",
    "react-native": ">=0.81.0",
    "sanitize-html": "^2.17.0"
  },
  "peerDependenciesMeta": {
    "dompurify": {
      "optional": true
    },
    "nativewind": {
      "optional": true
    },
    "sanitize-html": {
      "optional": true
    }
  },
  "workspaces": [
    "example",
    "e2e",
    "example-web"
  ],
  "packageManager": "yarn@4.11.0",
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "codegenConfig": {
    "name": "FabricRichTextSpec",
    "type": "all",
    "jsSrcsDir": "src",
    "android": {
      "javaPackageName": "io.michaelfay.fabricrichtext"
    },
    "ios": {
      "componentProvider": {
        "FabricRichText": "FabricRichText"
      }
    }
  },
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "create-react-native-library": {
    "type": "fabric-view",
    "languages": "kotlin-objc",
    "tools": [
      "eslint"
    ],
    "version": "0.56.0"
  }
}
